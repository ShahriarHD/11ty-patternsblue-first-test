<div class="posts-list">
    {% for post in posts %}
        {% if not post.data.draft %}
            <div class="post-card">
                <h2>
                    <a class="block" href="{{ post.url | url }}">{{ post.data.title }}</a>
                </h2>
                <p class="excerpt">{{ post.data.excerpt }}</p>
                <span class="block md:inline md:float-right md:pt-4 pt-2 created-date" datetime="{{ post.data.date }}">
                    {{ post.data.date | dateDisplay }}
                </span>
            </div>
        {% endif %}
    {% endfor %}
</div>